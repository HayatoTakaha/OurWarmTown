<div class="card mt-4">
  <div class="card-header">
    <h2 class="card-title">ユーザー情報の編集</h2>
  </div>
  <div class="card-body">
    <%= form_for(@user, url: admin_user_path(@user), method: :patch, html: { class: 'form-horizontal' }) do |f| %>
      <div class="form-group row">
        <%= f.label :name, "名前", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :email, "メールアドレス", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
          <%= f.submit "更新", class: "btn btn-primary" %>
          <%= link_to '戻る', admin_user_path(@user), class: 'btn btn-secondary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
