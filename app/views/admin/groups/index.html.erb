<table class="table table-striped">
  <thead>
    <tr>
      <th>グループ名</th>
      <th>説明</th>
      <th>所有者</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.description %></td>
        <td><%= group.owner ? group.owner.name : 'なし' %></td>
        <td>
          <%= link_to '編集', edit_admin_group_path(group), class: 'btn btn-primary btn-sm' %>
          <%= link_to '削除', admin_group_path(group), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
