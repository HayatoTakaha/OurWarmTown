<h1>投稿一覧</h1>
<%= link_to '新規投稿', new_post_path, class: 'btn btn-primary' %>
<% @posts.each do |post| %>
  <div class="post">
    <h2><%= link_to post.title, post %></h2>
    <p><%= truncate(post.content, length: 100) %></p>
    <p><%= link_to '編集', edit_post_path(post), class: 'btn btn-secondary' %> <%= link_to '削除', post, method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %></p>
  </div>
<% end %>
