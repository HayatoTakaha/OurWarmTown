<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title"><%= @post.title %></h1>
          <p class="card-text"><%= @post.content %></p>

          <% if @post.images.attached? %>
            <div class="row mb-3">
              <% @post.images.each do |image| %>
                <div class="col-md-6">
                  <%= image_tag image, class: 'img-fluid', alt: '投稿画像' %>
                </div>
              <% end %>
            </div>
          <% end %>

          <div class="d-flex">
            <%= link_to '編集', edit_post_path(@post), class: 'btn btn-secondary mr-2' %>
            <%= form_with(model: @post, method: :delete, local: true, data: { confirm: '本当に削除しますか？' }, 'data-turbolinks': false) do |form| %>
              <%= form.submit '削除', class: 'btn btn-danger mr-2' %>
            <% end %>
            <%= link_to '戻る', root_path, class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
