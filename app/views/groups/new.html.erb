<h1>新規グループ作成</h1>

<%= form_with(model: @group, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :name, "グループ名" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description, "説明" %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "作成", class: "btn btn-primary" %>
  </div>
<% end %>
