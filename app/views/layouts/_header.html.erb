<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/">Our Warm Town</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item">
        <%= link_to root_path, class: "nav-link-btn" do %>
          <i class="fas fa-home"></i> Top
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to about_path, class: "nav-link-btn" do %>
          <i class="fas fa-info-circle"></i> About
        <% end %>
      </li>
      <% if admin_signed_in? %>
        <li class="nav-item">
          <%= link_to admin_users_path, class: "nav-link-btn" do %>
            <i class="fas fa-users"></i> ユーザー管理
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to admin_comments_path, class: "nav-link-btn" do %>
            <i class="fas fa-comments"></i> コメント管理
          <% end %>
        </li>
        <li class="nav-item">
          <%= button_to destroy_admin_session_path, method: :delete, class: "nav-link-btn" do %>
            <i class="fas fa-sign-out-alt"></i> 管理者 Logout
          <% end %>
        </li>
      <% elsif user_signed_in? %>
        <li class="nav-item">
          <%= link_to mypage_users_path, class: "nav-link-btn" do %>
            <i class="fas fa-user"></i> MyPage
          <% end %>
        </li>
        <li class="nav-item">
          <%= button_to destroy_user_session_path, method: :delete, class: "nav-link-btn" do %>
            <i class="fas fa-sign-out-alt"></i> Logout
          <% end %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to new_user_session_path, class: "nav-link-btn" do %>
            <i class="fas fa-sign-in-alt"></i> Login
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to new_admin_session_path, class: "nav-link-btn text-danger" do %>
            <i class="fas fa-user-shield"></i> 管理者
