<h1>MyPage</h1>
<div class="row">
  <div class="col-md-3 text-center">
    <% if current_user.profile_image.attached? %>
      <%= image_tag current_user.profile_image, class: 'img-fluid rounded-circle', alt: 'プロフィール画像', style: 'width: 230px; height: 230px; object-fit: cover;' %>
    <% else %>
      <%= image_tag 'default_profile.png', class: 'img-fluid rounded-circle', alt: 'デフォルトプロフィール画像', style: 'width: 230px; height: 230px; object-fit: cover;' %>
    <% end %>
    <p class="mt-2"><strong><%= current_user.name %></strong>さん、ようこそ！</p>
    <%= link_to '編集', edit_user_path(current_user), class: 'btn btn-primary mt-2' %>
    <%= link_to '全ての投稿を見る', posts_path, class: 'btn btn-secondary mt-2' %> 
  </div>
  <div class="col-md-9">
    <div class="recent-posts-section ml-5"> 
      <h2 class="display-6 my-4" style="font-family: 'Dancing Script', cursive; color: #5a5a5a; text-align: left;">最近の投稿</h2>
      <div class="row justify-content-start"> 
        <% current_user.posts.order(created_at: :desc).limit(3).each do |post| %> <!-- 最新の投稿3つを表示 -->
          <div class="col-md-4 mb-4">
            <div class="card post p-3 border rounded content-box">
              <div class="d-flex align-items-center mb-2">
                <%= render partial: 'layouts/profile_image', locals: { user: post.user } %>
                <div class="ml-2">
                  <p class="text-muted mb-0" style="font-size: 0.8em;"><%= post.created_at.in_time_zone('Tokyo').strftime("%Y年%m月%d日 %H:%M") %></p>
                </div>
              </div>
              <% if post.images.attached? %>
                <div class="mb-2">
                  <%= image_tag post.images.first, class: 'img-fluid', style: 'width: 100%; height: 150px; object-fit: cover;', alt: '投稿画像' %>
                </div>
              <% else %>
                <div class="mb-2">
                  <%= image_tag 'default_image.jpg', class: 'img-fluid', style: 'width: 100%; height: 150px; object-fit: cover;', alt: 'デフォルト画像' %>
                </div>
              <% end %>
              <div>
                <h5 class="font-italic post-title mb-1" style="font-size: 1em;">
                  <%= link_to truncate(post.title, length: 10), post, class: 'text-decoration-none' %>
                </h5>
                <p class="post-content" style="font-size: 0.9em;">
                  <%= truncate(post.content, length: 10) %>
                </p>
              </div>
              <div class="d-flex justify-content-start align-items-center mt-3">
                <div class="d-flex align-items-center mr-3">
                  <i class="fas fa-heart"></i>
                  <p class="text-muted mb-0 ml-1"><%= post.likes.count %></p>
                </div>
                <div class="d-flex align-items-center mr-3">
                  <i class="fas fa-comment"></i>
                  <p class="text-muted mb-0 ml-1"><%= post.comments.count %></p>
                </div>
                <% if post.group.present? %>
                  <div class="d-flex align-items-center">
                    <i class="fas fa-users fa-sm mr-1"></i>
                    <p class="text-muted mb-0"><%= truncate(post.group.name, length: 5) %></p>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
  .content-box {
    background-color: #FFFAF0;
    padding: 10px;
    margin-bottom: 15px;
    border-radius: 5px;
    border: 1px solid #ddd;
  }

  .post-title a {
    color: #5a5a5a;
  }

  .post-title a:hover {
    color: #ff6347;
  }

  .post-content {
    margin-bottom: 10px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
</style>
