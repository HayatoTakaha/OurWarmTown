<!-- app/views/admin/comments/index.html.erb -->
<h1 class="mt-4">コメント管理</h1>
<table class="table table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th>ID</th>
      <th>ユーザー名</th>
      <th>内容</th>
      <th>作成日時</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.id %></td>
        <td><%= comment.user.name %></td>
        <td><%= comment.content %></td>
        <td><%= comment.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td>
          <%= link_to '削除', admin_comment_path(comment), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
