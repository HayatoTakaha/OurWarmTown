<!-- app/views/admin_panel/groups/index.html.erb -->
<h1>グループ管理</h1>

<table class="table">
  <thead>
    <tr>
      <th>グループ名</th>
      <th>説明</th>
      <th>オーナー</th>
      <th>アクション</th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.description %></td>
        <td><%= group.owner.name %></td>
        <td>
          <%= link_to '編集', edit_admin_panel_group_path(group), class: 'btn btn-primary btn-sm' %>
          <%= link_to '削除', admin_panel_group_path(group), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
