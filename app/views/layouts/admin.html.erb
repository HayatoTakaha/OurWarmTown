<!DOCTYPE html>
<html>
<head>
  <title>管理者画面 - Our Warm Town</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  <!-- Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">Our Warm Town</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to root_path, class: "nav-link" do %>
            <i class="fas fa-home"></i> Top
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to about_path, class: "nav-link" do %>
            <i class="fas fa-info-circle"></i> About
          <% end %>
        </li>
        <% if admin_signed_in? %>
          <li class="nav-item">
            <%= link_to admin_users_path, class: "nav-link" do %>
              <i class="fas fa-users-cog"></i> ユーザー管理
            <% end %>
          </li>
          <li class="nav-item">
            <%= button_to destroy_admin_session_path, method: :delete, class: "nav-link" do %>
              <i class="fas fa-sign-out-alt"></i> Logout
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>

  <div class="container mt-4">
    <%= yield %>
  </div>

  <!-- Bootstrap JS and dependencies -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
